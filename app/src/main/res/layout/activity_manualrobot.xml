<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback"
    tools:context=".manualrobot">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/simpleim"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_gravity="center"
                android:background="@color/common_google_signin_btn_text_light_focused"
                android:gravity="center"
                android:text="Manual Robot Control"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="30sp"
                app:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="321dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Enter your Ip"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="24sp"
                app:fontFamily="sans-serif-black" />

            <EditText
                android:id="@+id/editTex"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/common_google_signin_btn_text_light_default"
                android:gravity="center"
                android:hint="0.0.0.0"
                android:textColor="@color/brightyellow"
                android:textColorHint="@color/colorAccent"
                android:textSize="20sp"
                app:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="321dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Turn geer ON/OFF"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="24sp"
                app:fontFamily="sans-serif-black" />

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="152dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:background="@drawable/tswitch"
                android:checked="false"
                android:textOff=" "
                android:textOn=" " />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/common_google_signin_btn_text_light_default"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_keyboard_arrow_up_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="10dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="77dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@android:drawable/presence_online"
                        android:gravity="center"
                        android:text="stop" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="10dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>