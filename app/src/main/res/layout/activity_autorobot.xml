<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback"
    tools:context=".autorobot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/simpleim"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="Automatic Robot Control"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="30sp"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="321dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Enter your Ip"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="24sp"
            app:fontFamily="sans-serif-black" />

        <EditText
            android:id="@+id/editTex"
            android:layout_width="152dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:gravity="center"
            android:hint="0.0.0.0"
            android:textColor="@color/brightyellow"
            android:textColorHint="@color/colorAccent"
            android:textSize="20sp"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="321dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Turn ON/OFF"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="24sp"
            app:fontFamily="sans-serif-black" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="152dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="@drawable/tswitch"
            android:checked="false"
            android:textOff=" "
            android:textOn=" " />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>