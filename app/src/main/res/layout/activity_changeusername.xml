<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".changeusername">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@drawable/tabularback"
            android:gravity="center"
            android:text="Change Username"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="36sp"
            app:fontFamily="sans-serif-black"
            app:srcCompat="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:text="your password"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            app:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="type your password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@android:color/holo_green_light"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:text="your new username"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            app:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="type username"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@android:color/holo_green_light"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Changing your account data will sign you out ,You will be forced to sign in again."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            app:fontFamily="sans-serif-black" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="right"
            android:layout_marginRight="70dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:text="Proceed"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>